<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.meongnyang.shop.repository.ProductMapper">

    <select id="findAllByStartIndexAndLimit" resultType="com.meongnyang.shop.entity.ProductList">
        select
            id,
            product_name,
            product_price,
            product_brand
        from
            product_tb
        order by
            id desc
        limit #{startIndex}, #{limit}
    </select>

    <select id="getProductsCount" resultType="java.lang.Integer">
        select
            count(*)
        from
            product_tb
    </select>
    <select id="findById" resultType="com.meongnyang.shop.entity.Product">
        select
            id,
            product_name,
            product_price,
            product_price_discount,
            product_detail,
            product_brand,
            product_model,
            product_memo,
            product_create_date,
            product_update_date,
            recommendation
        from
            product_tb
        where
            id = #{id}
    </select>
</mapper>
