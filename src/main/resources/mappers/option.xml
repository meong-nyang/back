<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.meongnyang.shop.repository.OptionMapper">

    <select id="findAllByStartIndexAndLimit" resultType="com.meongnyang.shop.entity.CategoryProductList">
        select
            id,
            category_id,
            product_name,
            product_price,
            product_brand
        from
            product_tb
        order by
            category_id desc
        limit #{startIndex}, #{limit}
    </select>

    <select id="getCategories" resultType="com.meongnyang.shop.entity.Category">
        select
            id,
            category_name
        from
            category_tb
    </select>

</mapper>
